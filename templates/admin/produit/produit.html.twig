{% extends 'admin/shared/admin_base.html.twig' %}
{% block title %}OSTAJ - Liste des produits{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

<body>
	<div class="main" id="main">
		<div class="section">
			<div class="col col-lg-9">

				{% for label,messages in app.flashes %}
					<div class="container text-center my-5">
						<div class="alert alert-success {{ label }}">
							{% for message in messages %}
								<p>{{message | raw }}</p>
							{% endfor %}
						</div>
					</div>
				{% endfor %}


				<div class="card">
					<div class="card-body">
						<div class="row">
							<h1 class="col-sm card-title m-2">Liste des produits :</h1>
							<a class="col-sm-3 btn btn-dark align-self-center m-2" href="{{ path('produit_new') }}">Ajouter un produit</a>
						</div>
						<table class="table table-hover text-center">
							<thead>
								<tr>
									<th scope="col-2">Id</th>
									<th scope="col-2">Nom du produit</th>
									<th scope="col-2">Description</th>
									<th scope="col-2">action</th>
								</tr>
							</thead>
							<tbody>
								{% for produit in produits %}
									<tr>
										<td scope="row">{{ produit.id }}</td>
										<td scope="row">{{ produit.nomProduit }}</td>
										<td scope="row">{{ produit.descriptionProduit }}</td>
										<td scope="row">
											<a class="btn btn-success" href="{{ path('produit_show', {'id': produit.id}) }}" class="mx-3">Voir</a>
											<a class="btn btn-info" href="{{ path('produit_edit', {'id': produit.id}) }}" class="mx-3">Modifier</a>
											<a class="btn btn-danger my-2 mx-2" href="{{ path('produit_delete', {'id': produit.id}) }}">Supprimer</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="6">Aucun produits trouv√©</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
{% endblock %}
