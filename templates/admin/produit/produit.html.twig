{% extends 'admin/shared/admin_base.html.twig' %}
{% block title %}OSTAJ - Liste des produits{% endblock %}

{% block stylesheets %}{% endblock %}

{% block css %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/dashboard/dashboard.css') }}">
{% endblock %}

{% block body %}

<body>
	<div class="main" id="main">
		<div class="section">
			<div class="col-lg tableau-produit">
				<div class="alert alert-info">
					<div class="card-body">
						<div class="row">
							<h1 class="col-sm card-title m-2">Liste des produits :</h1>
							<a class="col-sm-3 btn btn-produit align-self-center m-2" href="{{ path('produit_new') }}">Ajouter un produit</a>
						</div>
						<table class="table table-info text-center">
							<thead>
								<tr>
									<th scope="col-2">Id</th>
									<th scope="col-2">Nom du produit</th>
									<th scope="col-2">Description</th>
									<th scope="col-2">Voir</th>
									<th scope="col-2">Modifier</th>
									<th scope="col-2">Supprimer</th>
								</tr>
							</thead>
							<tbody>
								{% for produit in produits %}
									<tr>
										<td scope="row">{{ produit.id }}</td>
										<td scope="row">{{ produit.nomProduit }}</td>
										<td scope="row">{{ produit.descriptionProduit }}</td>
										<td scope="row">
											<a class="btn btn-produit mx-2 my-2 p-2" href="{{ path('produit_show', {'id': produit.id}) }}" class="mx-3">Voir</a>
										</td>
										<td scope="row">
											<a class="btn btn-outline-success mx-2 my-2 p-2" href="{{ path('produit_edit', {'id': produit.id}) }}" class="mx-3">Modifier</a>
										</td>
										<td scope="row">
											{{ include('admin/produit/_delete_form.html.twig') }}
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="6">Aucun produits trouv√©</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
							<a class="col-sm-3 btn btn-produit align-self-center m-2" href="{{ path('produit_new') }}">Ajouter un produit</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
{% endblock %}
