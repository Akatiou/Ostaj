{% extends 'admin/shared/admin_base.html.twig' %}
{% block title %}OSTAJ - Accueil{% endblock %}

{% block stylesheets %}{% endblock %}

	
{% block body %}

<body>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ ('/') }}">Aller sur le site</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
          <div class="row">

            <!-- Sales Card -->
            <div class="col-xxl-4 col-md-6">
              <div class="card info-card sales-card">

                <div class="card-body">
                  <a href="{{ asset('/admin/commande/encours')}}"><h5 class="card-title">Réservations en cours</h5></a>

                  <!-- <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-cart"></i>
                    </div>
                    <div class="ps-3">
                      <h6>Nombre total de réservations :  commandes | length </h6>
                    </div>
                  </div> -->
                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-cart"></i>
                    </div>
                    <div class="ps-3">
                        <a href="{{ asset('/admin/commande/encours')}}"><h6>Total des réservations en cours : {{ countEnCours }}</h6></a>
                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Sales Card -->

            <!-- Revenue Card -->
            <div class="col-xxl-4 col-md-6">
              <div class="card info-card revenue-card">

                <div class="card-body">
                  <a href="{{ asset('/admin/produit')}}"><h5 class="card-title">Produits</h5></a>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bx bx-store"></i>
                    </div>
                    <div class="ps-3">
                      <a href="{{ asset('/admin/produit')}}"><h6>Nombre total de produits : {{ produits | length }}</h6></a>
                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Revenue Card -->

            <!-- Customers Card -->
            <div class="col-xxl-4 col-xl-12">

              <div class="card info-card customers-card">
                <div class="card-body">
                  <a href="{{ asset('/admin/user') }}"><h5 class="card-title">Utilisateurs</h5></a>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                      <a href="{{ asset('/admin/user') }}"><h6>Nombre total d'utilisateurs : {{ users | length }}</h6></a>
                    </div>
                  </div>

                </div>
              </div>

            </div><!-- End Customers Card -->

            <!-- Reports -->
            <div class="col-12">
              <div class="card">

                <div class="card-body">
                  <a href="{{ asset('/admin/commande/encours')}}"><h5 class="card-title">Réservation de pains en cours</h5></a>
                  <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>N° de commande</th>
                                <th>Nom du client</th>
                                <th>Numéro de téléphone</th>
                                <th>le Campagne</th>
                                <th>Le blé pop</th>
                                <th>Le kamata</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for commande in commande %}
                                <tr>
                                    <td>
                                      <a class="alert-link" href="{{ path('commande_show', {'id': commande.id}) }}">{{ commande.id }}</a>
                                    </td>
                                    <td>
                                        <a class="alert-link" href="{{ path('commande_show', {'id': commande.id}) }}">{{ commande.nomClient }}</a>
                                    </td>
                                    <td class="text-center">{{ commande.telephoneClient }}</td>
                                    <td class="text-center">
                                      {% set quantity = 0 %}
                                      {% for detailCommande in detailsCommandes[commande.id] %}
                                          {% if detailCommande.produit.id == 1 %}
                                              {% set quantity = detailCommande.quantite %}
                                          {% endif %}
                                      {% endfor %}
                                      {% if quantity is null %}
                                          0
                                      {% else %}
                                          {{ quantity }}
                                      {% endif %}
                                    </td>
                                    <td class="text-center">
                                      {% set quantity = 0 %}
                                      {% for detailCommande in detailsCommandes[commande.id] %}
                                          {% if detailCommande.produit.id == 2 %}
                                              {% set quantity = detailCommande.quantite %}
                                          {% endif %}
                                      {% endfor %}
                                      {% if quantity is null %}
                                          0
                                      {% else %}
                                          {{ quantity }}
                                      {% endif %}
                                    </td>
                                    <td class="text-center">
                                      {% set quantity = 0 %}
                                      {% for detailCommande in detailsCommandes[commande.id] %}
                                          {% if detailCommande.produit.id == 3 %}
                                              {% set quantity = detailCommande.quantite %}
                                          {% endif %}
                                      {% endfor %}
                                      {% if quantity is null %}
                                          0
                                      {% else %}
                                          {{ quantity }}
                                      {% endif %}
                                    </td>
                                    <td class="text-center">{{ commande.datecommande | date("d/m/Y")  }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

              </div>
            </div><!-- End Reports -->

            <!-- Début liste des produits -->
            <div class="col-12">
			        <div class="col col-lg-12">

                {% for label,messages in app.flashes %}
                  <div class="container text-center my-5">
                    <div class="alert alert-success {{ label }}">
                      {% for message in messages %}
                        <p>{{message | raw }}</p>
                      {% endfor %}
                    </div>
                  </div>
                {% endfor %}


                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <h1 class="col-sm card-title m-2">Liste des produits :</h1>
                      <a class="col-sm-3 btn btn-dark align-self-center m-2" href="{{ path('produit_new') }}">Ajouter un produit</a>
                    </div>
                    <table class="table table-hover text-center">
                      <thead>
                        <tr>
                          <th scope="col">Id</th>
                          <th scope="col">Nom du produit</th>
                          <th scope="col">Description</th>
                          <th scope="col">action</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for produit in produits %}
                          <tr>
                            <td scope="row">{{ produit.id }}</td>
                            <td scope="row">{{ produit.nomProduit }}</td>
                            <td scope="row">{{ produit.descriptionProduit }}</td>
                            <td scope="row" class="d-flex flex-column">
                              <a class="btn btn-dark mx-2 my-2 p-2" href="{{ path('produit_show', {'id': produit.id}) }}">Voir</a>
                              <a class="btn btn-dark mx-2 p-2" href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
                              <a class="btn btn-dark mx-2 my-2 p-2" href="{{ path('produit_delete', {'id': produit.id}) }}">Supprimer</a>
                            </td>
                          </tr>
                        {% else %}
                          <tr>
                            <td colspan="6">Aucun produits trouvé</td>
                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <!-- Fin liste des produits -->

            <!-- Début liste des utilisateurs -->
            <div class="col-12">
              <div class="card recent-sales overflow-auto">

                <div class="card-body">
                  <h5 class="card-title">Liste des utilisateurs</h5>

                    <table class="table table-hover text-center">
                        <thead>
                            <tr>
                                <th scope="col-2">Id</th>
                                <th scope="col-2">Prénom et nom</th>
                                <th scope="col-2">Email</th>
                                <th scope="col-2">Roles</th>
                                <th scope="col-2">actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td scope="row">{{ user.id }}</td>
                                    <td scope="row">{{ user.username }}</td>
                                    <td scope="row">{{ user.email }}</td>
                                    <td scope="row">{{ user.roles ? user.roles|json_encode : '' }}</td>
                                    <td scope="row" class="d-flex flex-column">
                                        <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-dark mx-2 my-2">Voir</a>
                                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-dark mx-2 my-2">Modifier</a>
                                        <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-dark mx-2 my-2">Supprimer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">Aucun utilisateurs trouvé</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
				    <a class="btn btn-dark" href="{{ path('user_new') }}">Ajouter un utilisateur</a>
                </div>
              </div>
            </div><!-- Fin liste des utilisateurs -->

          </div>
        </div><!-- End Left side columns -->
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <div class="copyright">
      &copy; Copyright <strong><span>Aïssata</span></strong>.
    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

{% endblock %}

{% block javascripts %}{% endblock %}