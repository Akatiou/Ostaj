{% extends 'admin/shared/admin_base.html.twig' %}

{% block title %}OSTAJ - Fiche d'un utilisateur{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

{% include "admin/shared/admin_navbar.html.twig" %}

<body>
	<div class="main" id="main">
		<div class="container">
		<h1 class="text-center">{{ user.username }}</h1>

			<table class="table container border shadow col-8">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ user.id }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Roles</th>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					</tr>
					<tr>
						<th>Password</th>
						<td>{{ user.password }}</td>
					</tr>
					<tr>
						<th>Username</th>
						<td>{{ user.username }}</td>
					</tr>
				</tbody>
			</table>
			<div class="d-flex justify-content-center m-2">
				<a class="btn btn-warning my-2 mx-2" href="{{ path('user_index') }}">Retour</a>

				<a class="btn btn-success my-2 mx-2" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

				{{ include('admin/user/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</body>
{% endblock %}
